<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/main_button"
    android:paddingHorizontal="32dp"
    android:gravity="center"
    android:weightSum="3"
    android:paddingVertical="8dp"
    android:layout_margin="16dp"
    style="@style/MyRoundedButton"
    android:clipToOutline="true">

    <!-- Tombol Pengaduan (Aktif) -->
    <LinearLayout
        android:id="@+id/nav_pengaduan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_nav_selected">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/solar__inbox_outline"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaduan"
            android:textSize="10sp"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Tombol Tambah (+) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/nav_add"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_add_circle"
            android:src="@drawable/lucide__plus"

            android:contentDescription="Tambah"/>
    </LinearLayout>

    <!-- Tombol Profil -->
    <LinearLayout
        android:id="@+id/nav_profil"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_nav_selected">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/iconoir__profile_circle"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="10sp"
            android:textColor="#A0A8C1"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
